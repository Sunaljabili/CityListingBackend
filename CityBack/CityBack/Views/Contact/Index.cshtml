@model MessageFromUser

@{
    ViewData["Title"] = "Index";
}

<!-- INTRO-PAGE AREA START -->
<section id="intro-page">
    <div class="container">
        <div class="row ">
            <div class="title-page text-center  ">
                <h2>
                    Contact Us
                </h2>
            </div>
        </div>
    </div>
</section>
<!-- INTRO-PAGE AREA START -->
<!-- MAP AREA START -->
<section id="map">
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-12 col-md-12 col-12 col-sm-12">
                <p>
                    <iframe class="map_x"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d419381.8686939508!2d-79.18743762148439!3d34.79535247212896!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2f66e2188a29f%3A0xb408afef09e2702e!2sHarlem%2C%20New%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1576405497153!5m2!1sen!2s"
                            height="480" frameborder="0" style="border:0;" allowfullscreen="">
                    </iframe>
                </p>
            </div>
        </div>
    </div>
</section>


<!-- MAP AREA END -->
<!-- GET IN TOUCH START -->
<section id="get_in_touch">
    <div class="container">
        <div class="d-flex flex-wrap ">
            <div class="col-md-8 col-lg-8 col-12 col-sm-12">
                <div class="send_form">

                    <form method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Get in Touch </label>
                            <textarea asp-for="Message" class="form-control" placeholder="Enter Message" rows="9"
                                      cols="30"></textarea>
                        </div>
                        <div class="row ">
                            <div class="col-lg-6 col-md-6 col-12 col-sm-12 mt-4">
                                <input asp-for="Name" class="form-control w-150"
                                       placeholder="Enter Your Name">
                            </div>
                            <div class="col-lg-6 col-md-6 col-12 col-sm-12 mt-4">
                                <input asp-for="Email" class="form-control"
                                       placeholder="Enter Your Email">
                            </div>
                            <div class="col-lg-12 col-md-6 col-12 col-sm-12 mt-4">
                                <input asp-for="Subject" class="form-control mt-3"
                                       placeholder="Enter Subject">
                            </div>
                            <div class="button-contact mt-5 ml-2">
                                <button class="btn btn-primary">SEND</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 col-12 col-sm-12 mt-5  ">


                <div class="contact-info">
                    <div class="media-body">
                        <h3>Buttonwood, California.</h3>
                        <span>Rosemead, CA 91770</span>
                    </div>
                    <div class="contact-icon">
                        <i class="fal fa-home-lg "></i>
                    </div>
                </div>
                <div class="contact-info mt-5">
                    <div class="media-body">
                        <h3>+1 253 565 2365</h3>
                        <span>Mon to Fri 9am to 6pm</span>
                    </div>
                    <div class="contact-icon">
                        <i class="fal fa-mobile-alt"></i>
                    </div>
                </div>
                <div class="contact-info mt-5">
                    <div class="media-body">
                        <h3>support@colorlib.com</h3>
                        <span>Send  your query anytime!</span>
                    </div>
                    <div class="contact-icon">
                        <i class="fal fa-envelope"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- GET IN TOUCH END -->
@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}