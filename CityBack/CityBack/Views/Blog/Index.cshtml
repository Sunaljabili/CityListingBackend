@model BlogVM
@{
    ViewData["Title"] = "Index";
}
<!-- INTRO-PAGE AREA START -->
<section id="intro-page">
    <div class="container">
        <div class="row ">
            <div class="title-page text-center  ">
                <h2>
                    Blog
                </h2>
            </div>
        </div>
    </div>
</section>
<!-- INTRO-PAGE AREA START -->


<!-- BLOG AREA START -->
<section id="blog-area">
    <div class="container">
        <div class="d-flex flex-wrap mt-3">
            <div class="col-lg-8 col-sm-12">
                @foreach (BlogPost blogpst in Model.BlogPosts)
                {

                    <div class="blog-post mt-5">
                        <div class="posting">
                            <div class="blog-img">
                                <img src="~/assets/img/blog/@blogpst.Image" alt="">
                            </div>
                            <div class="date-time">
                                <span>15 Jan</span>
                            </div>
                        </div>
                        <div class="posting-title mt-5">
                            <div class="blog-title">
                                <a asp-controller="Blog"  asp-action="BlogDetails"  asp-route-id="@blogpst.Id">
                                    <h4>@blogpst.BlogDetailLink</h4>
                                </a>

                            </div>
                            <div class="blog-description">
                                <p>
                                  @blogpst.PostDescription
                                </p>
                            </div>
                        </div>

                    </div>
                }
            </div>
            <div class="col-lg-4">
                @*<div class="search" id="searchList">
                    <div class="input-group mb-3 ml-5 mt-5">
                        <input type="text" class="form-control" id="input_search" aria-label="Recipient's username"
                               aria-describedby="basic-addon2">
                        <span class="input-group-text" id="basic-addon2">
                        <i class="far fa-search"></i></span>
                    </div>
                   
                    <button type="button" class="btn btn-danger ml-5 ">SEARCH</button>
                </div>*@

                @* Blog Category Start*@
                <div class="category ml-5 mt-3">
                    <h4>@Model.BlogCategory.Title</h4>
                    <ul class="category-list">

                        @foreach (BlogCategory blogctg in Model.BlogCategories)
                        {
                            <li class="list-elemt">
                                <a href="#">
                                    <span>@blogctg.CategoryName (@blogctg.CategoryCount)</span>
                                </a>
                            </li>
                        }


                    </ul>
                </div>
                @* Blog Category End*@

                @* Blog Recent Start*@
                <div class="recent-post ml-5 mt-5">
                    <h4>@Model.BlogRecent.Title</h4>

                    @foreach (BlogRecent blgrecent in Model.BlogRecents)
                    {
                        <div class="post-item">
                            <img src="~/assets/img/post/@blgrecent.Image" alt="">
                            <div class="post-body">
                                <a href="blog-details.html"> <span>@blgrecent.RecentTitle</span> </a>
                                <p>January @blgrecent.DateTime</p>
                            </div>
                        </div>

                    }
                </div>
                @* Blog Recent End*@

                @* Blog TapCloud Start*@
                <div class="tap-cloud ml-5 mt-5">
                    <h4>@Model.BlogTag.Title</h4>
                    <ul class="list">
                        @foreach (BlogTag blgTag in Model.BlogTags)
                        {
                            <li class="list-item">
                                <a href="#">@blgTag.CloudsLinks</a>
                            </li>
                        }
                    </ul>
                </div>
                @* Blog TapCloud End*@


                <div class="instagram-feeds ml-5 mt-5">
                    <h4>Instagram Feeds</h4>
                    <div class="img">
                        <ul class="flex-wrap">


                            <li>
                                <a href="">
                                    <img src="~/assets/img/post/post_5.png" alt="">
                                </a>
                            </li>
                            <li>
                                <a href=""></a>
                                <img src="~/assets/img/post/post_6.png" alt="">
                            </li>
                            <li>
                                <a href=""></a>
                                <img src="~/assets/img/post/post_7.png" alt="">
                            </li>
                            <li>
                                <a href=""></a>

                                <img src="~/assets/img/post/post_8.png" alt="">
                            </li>
                            <li>
                                <a href=""></a>
                                <img src="~/assets/img/post/post_9.png" alt="">
                            </li>
                            <li>
                                <a href=""></a>
                                <img src="~/assets/img/post/post_10.png" alt="">
                            </li>
                        </ul>
                    </div>
                </div>

               @await  Component.InvokeAsync("Subscribe")
            </div>
        </div>
    </div>
</section>
<!-- BLOG AREA END -->
