@model AppUser
@{
    ViewData["Title"] = "Activated";
}

<div class="row mt-3">
    <div class="col-12">
        <h3>@Model.Fullname</h3>
        <h3>@Model.Email</h3>
        <h3>@Model.UserName</h3>
    </div>
    <div class="d-flex justify-content-end align-items-center">
        <a asp-action="Index" class="btn btn-dark" style="margin-left:200px">Go Back</a>
        <form method="post" class="ml-3">
            @if (Model.Activated)
            {
                <input type="hidden" name="Activated" value="false" />
                <input type="submit" class="btn btn-danger ml-5" value="Disabled" />
            }
            else
            {
                <input type="hidden" name="Activated" value="true" />
                <input type="submit" class="btn btn-success ml-5" value="Actived" />
            }
        </form>
    </div>
</div>


