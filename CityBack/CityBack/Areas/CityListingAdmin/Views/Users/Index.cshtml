@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Users Table</h4>
                <div class="text-danger">@TempData["ChangeRole"]</div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered table-secondary">
                        <thead>
                            <tr>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Role
                                </th>

                                <th>
                                    Activated
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                                <tr>
                                    <td>
                                        @user.Fullname
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        @user.Username
                                    </td>
                                    <td>
                                        @user.Role
                                    </td>
                                    @if (user.Activated)
                                    {
                                        <td class="text-success">
                                            Active
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-danger">
                                            Disable
                                        </td>
                                    }
                                    <td>
                                        @if (user.Activated)
                                        {
                                            <a asp-action="Activated" asp-route-id="@user.Id" class="btn btn-danger">
                                                Disabled
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activated" asp-route-id="@user.Id" class="btn btn-success">
                                                Actived
                                            </a>
                                        }
                                     
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


