@model IEnumerable<ClientTestimonial>
@{
    ViewData["Title"] = "Index";
}
    <div class="row mt-5">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Client Testimonial Table
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Description
                                </th>

                                <th>
                                    WorkerImage
                                </th>

                                <th>
                                    WorkerName
                                </th>
                                <th>
                                    WorkerJob
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ClientTestimonial clientTestimonial in Model)
                            {
                            <tr>
                                <td>
                                @clientTestimonial.Description
                                </td>
                                 <td>
                                     <img src="~/assets/img/blog/@clientTestimonial.WorkerImage" alt="Alternate Text" />
                                 </td>

                                <td>
                                    @clientTestimonial.WorkerName

                                </td>
                                <td>
                                    @clientTestimonial.WorkerJob
                                </td>
                                <td>
                                    <a asp-action="Info" asp-route-id="@clientTestimonial.Id" class="btn btn-success">
                                    <i class="far fa-info-square" style="font-size:30px"></i></a>

                                    <a asp-action="Update" asp-route-id="@clientTestimonial.Id" class="btn btn-warning">
                                        <i class="far fa-wrench" style="font-size:30px"></i>

                                    </a>
                                    <a asp-action="Delete" asp-route-id="@clientTestimonial.Id" class="btn btn-danger">
                                        <i class="fas fa-trash-alt" style="font-size:30px"></i>
                                    </a>
                                </td>

                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
