@model PopularLocation
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card mt-5  ">
        <div class="card ml-auto">
            <div class="card-body w-50">
                <h4 class="card-title">Update Location</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="CityName"></label>
                        <input asp-for="CityName" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="CityName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CityCount"></label>
                        <input asp-for="CityCount" class="form-control" placeholder="Post Title">
                        <span class="text-danger" asp-validation-for="CityCount"></span>
                    </div>
                    <div class="form-group">
                        <label> Select Category</label>
                        @foreach (var item in ViewBag.Category)
                        {
                            @item.CatgTitle
                            <input type="radio" value="@item.Id" name="catg" class="ml-2 mr-1" @(Model.FeaturedCategory.Id==item.Id ? "checked" : "") >
                        }


                    </div>

                    <button type="submit" class="btn btn-warning mr-2">Update</button>
                    <a class="btn btn-danger" asp-controller="PopularCategory" asp-action="Index"> Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#BlogText'))
            .catch(error => {
                console.error(error);
             });
    </script>
}
