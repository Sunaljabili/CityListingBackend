@model IEnumerable<PopularLocation>
@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Popular Location Table
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                CityName
                            </th>
                            <th>
                                CityCount
                            </th>
                            <th>
                                CatgTitle
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (PopularLocation popularLocation in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/img/gallery/@popularLocation.Image" style="width:100px;height:100px" alt="Alternate Text" />
                                </td>
                                <td>
                                    @popularLocation.CityName
                                </td>
                                <td>
                                    @popularLocation.CityCount
                                </td>
                                <td>
                                    @popularLocation.FeaturedCategory.CatgTitle
                                </td>
                               
                                <td>
                                    <a asp-action="Info" asp-route-id="@popularLocation.Id" class="btn btn-success"><i class="far fa-info-square" style="font-size:30px"></i></a>

                                    <a asp-action="Update" asp-route-id="@popularLocation.Id" class="btn btn-warning">
                                        <i class="far fa-wrench" style="font-size:30px"></i>

                                    </a>
                                    <a asp-action="Delete" asp-route-id="@popularLocation.Id" class="btn btn-danger">
                                        <i class="fas fa-trash-alt" style="font-size:30px"></i>
                                    </a>
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


