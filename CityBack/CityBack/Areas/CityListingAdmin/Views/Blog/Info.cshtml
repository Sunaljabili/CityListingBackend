@model BlogPost
@{
    ViewData["Title"] = "Info";
}

<div class="row">
    <div class="col-12 mt-5">

        <h2>@Model.BlogDescription</h2>

        <h3> <img src="~/assets/img/blog/@Model.Image" alt="Alternate Text" /> </h3>

       <h3>@Html.Raw(Model.BlogText)</h3>

    </div>
    <div class="col-12 mt-2">
        <a asp-controller="BlogController" asp-action="Index" class="btn btn-danger">Go Back</a>
    </div>
</div>
