@model BlogPost
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card mt-5  ">
        <div class="card ml-auto">
            <div class="card-body w-50">
                <h4 class="card-title">Create BlogPost</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="PostDescription"></label>
                        <input asp-for="PostDescription" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="PostDescription"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostTitle"></label>
                        <input asp-for="PostTitle" class="form-control" placeholder="Post Title">
                        <span class="text-danger" asp-validation-for="PostTitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogDetailLink"></label>
                        <input asp-for="BlogDetailLink" class="form-control" placeholder="Blog Detail">
                        <span class="text-danger" asp-validation-for="BlogDetailLink"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogNews"></label>
                        <input asp-for="BlogNews" class="form-control" placeholder="Blog News">
                    </div>

                    <div class="form-group">
                        <label asp-for="BlogDescription"></label>
                        <input asp-for="BlogDescription" class="form-control" placeholder="Blog Description">
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogText"></label>
                        <textarea asp-for="BlogText" class="form-control" placeholder="Blog Text" rows="4"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-danger" asp-controller="Blog" asp-action="Index"> Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#BlogText'))
            .catch(error => {
                console.error(error);
             });
    </script>
}

