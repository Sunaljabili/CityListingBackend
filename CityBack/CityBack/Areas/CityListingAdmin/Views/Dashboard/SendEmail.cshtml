
@{
    ViewData["Title"] = "SendEmail";
}

<div class="container">
    <form class="mt-4" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <input type="hidden" id="Email" name="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Subject</label>
            <input type="text" id="Subject" name="Subject" class="form-control" />
        </div>
        <div class="form-group">
            <label>Message</label><br />
            <textarea type="text" id="Message" name="Message" cols="150" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
