@model MessageFromUser

@{
    ViewData["Title"] = "Info";
}

<div class="container">
    <form class="mt-4">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Subject"></label>
            <input asp-for="@Model.Subject" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Message"></label><br />
            <textarea asp-for="@Model.Message" cols="150" rows="5" disabled></textarea>
        </div>
        <a asp-controller="Dashboard" asp-action="SendEmail" asp-route-id="@Model.Id" class="btn btn-primary">Send Email</a>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
