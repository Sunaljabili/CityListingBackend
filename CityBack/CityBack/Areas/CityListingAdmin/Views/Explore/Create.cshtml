@model Explore
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card mt-5  ">
        <div class="card ml-auto">
            <div class="card-body w-50">
                <h4 class="card-title">Create Explore</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="ChooseCategory"></label>
                        <input asp-for="ChooseCategory" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="ChooseCategory"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryTitle"></label>
                        <textarea asp-for="CategoryTitle" class="form-control" placeholder="Description" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-danger" asp-controller="Explore" asp-action="Index"> Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
 
   <script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#CategoryTitle'))
            .catch(error => {
                console.error(error);
             });
     </script>
}  

